<script type="text/javascript">
  figureDiv = document.getElementById('figure');
  var xData = figureDiv.getAttribute("x_data").split(",").map(function(n) {return Number(n);});
  var yData = figureDiv.getAttribute("y_data").split(",").map(function(n) {return Number(n);});
  var xLabel = figureDiv.getAttribute("x_label")
  var yLabel = figureDiv.getAttribute("y_label")


  var trace1 = {
    x: xData,
    y: yData,
    type: 'scatter',
    mode: 'markers',
    line: {
      color: 'rgb(55, 128, 191)',
      width: 3,
      dash: 'solid',
    },
    name: 'Curve'
  };

  var layout = {
    title:'Test - obtain data from div attributes',
    xaxis: {
      title: xLabel
    },
    yaxis: {
      title: yLabel
    }
  };

  var data = [trace1];

  Plotly.newPlot(figureDiv, data, layout);

</script>

